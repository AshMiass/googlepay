FROM node:16

ARG CLIENT_ID
ARG MERCHANT_ID
ARG NODE_ENV
ARG APP_SECRET
ARG BASE_URL

ENV CLIENT_ID=$CLIENT_ID
ENV NODE_ENV=$NODE_ENV
ENV APP_SECRET=$APP_SECRET
ENV MERCHANT_ID=$MERCHANT_ID
ENV BASE_URL=$BASE_URL

WORKDIR /app
COPY package.json ./
RUN npm install --production

COPY . .



CMD ["node", "server.js"]
